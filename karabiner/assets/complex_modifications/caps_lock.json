{
  "title": "Change caps_lock key",
  "rules": [
    {
      "description": "Change fn key to command+control+option+shift. (Post escape key when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },

    {
      "description": "Change japanese_pc_xfer key to command+control+option+shift. (Post escape key when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_pc_xfer",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_option",
                "left_control"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },

    {
      "description": "Change right cmd key to command+control+option+shift. (Post escape key when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_option",
                "left_control"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },

    {
      "description": "Change caps_lock to control if pressed with other keys, to F16 if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f16"
            }
          ]
        }
      ]
    },

    {
      "description": "Change left command to command if pressed with other keys, to F17 if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f17"
            }
          ]
        }
      ]
    }
  ]
}
